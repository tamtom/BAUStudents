                    android:id="@+id/o1"

                    android:entries="@array/marksold">

                </Spinner>

                <Spinner
                    android:id="@+id/h1"
                    android:entries="@array/hours">

                </Spinner>

                <ToggleButton
                    android:id="@+id/t1"
                    android:checked="false"
                    android:textOff="مادة جديدة"
                    android:textOn="معادة" />

                <CheckBox
                    android:id="@+id/c1"
                    android:checked="false" />

                <TextView
